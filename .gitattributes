# Auto detect text files and normalize line endings to LF
* text=auto

# JavaScript
*.js text eol=lf
*.jsx text eol=lf
*.mjs text eol=lf

# TypeScript
*.ts text eol=lf
*.tsx text eol=lf

# JSON
*.json text eol=lf

# Markdown
*.md text eol=lf
*.markdown text eol=lf

# YAML
*.yaml text eol=lf
*.yml text eol=lf

# CSS/SCSS/Less
*.css text eol=lf
*.scss text eol=lf
*.less text eol=lf

# HTML
*.html text eol=lf
*.htm text eol=lf

# Shell
*.sh text eol=lf
*.bash text eol=lf

# Batch
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
